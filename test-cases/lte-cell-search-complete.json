{
  "testCaseId": "LTE-001-COMPLETE",
  "name": "LTE Cell Search & Sync Complete",
  "description": "Complete LTE cell search procedure: RSSI scanning, PSS/SSS sync, PCI, DMRS, PBCH-MIB, PHICH, PCFICH, PDCCH, PDSCH-SIB1, PLMN match",
  "technology": "LTE",
  "category": "CELL_SEARCH",
  "version": "1.0.0",
  "ueProfile": {
    "id": "UE-001",
    "imsi": "001010123456789",
    "imei": "123456789012345",
    "deviceCapabilities": {
      "bandwidthClass": "A",
      "caSupport": true,
      "mimoSupport": "4x4",
      "features": ["LTE", "MIMO", "CA"],
      "maxThroughput": { "downlink": 150, "uplink": 50 },
      "powerClass": "3",
      "frequencyBands": ["B1", "B3", "B7", "B20"]
    },
    "defaultApn": "internet",
    "securitySupport": {
      "encryption": ["AES", "SNOW3G"],
      "integrity": ["AES", "SNOW3G"],
      "keyLength": 128
    }
  },
  "cellConfig": {
    "pci": 123,
    "earfcn": 1850,
    "bandwidth": 20,
    "tac": 1,
    "mcc": "001",
    "mnc": "01"
  },
  "expectedMessageSequence": [
    {
      "step": 1,
      "eventType": "RSSI_SCAN",
      "layer": "PHY",
      "description": "RSSI Scanning Multiple Cells",
      "subSteps": [
        "Start RSSI scan on EARFCN 1850",
        "Detect multiple cells",
        "Measure RSSI for each cell",
        "Select best cell based on RSSI"
      ],
      "expectedIEs": {
        "RSSI-SCAN-RESULT": {
          "type": "SEQUENCE",
          "value": [
            { "earfcn": 1850, "rssi": -85.2, "cellId": "CELL-001" },
            { "earfcn": 1850, "rssi": -92.1, "cellId": "CELL-002" },
            { "earfcn": 1850, "rssi": -88.7, "cellId": "CELL-003" }
          ],
          "description": "RSSI scan results for multiple cells",
          "mandatory": true,
          "standardReference": "3GPP TS 36.101",
          "encoding": "BER",
          "size": 24,
          "criticality": "REJECT"
        },
        "SCANNED-EARFCN": {
          "type": "INTEGER",
          "value": 1850,
          "description": "E-UTRA Absolute Radio Frequency Channel Number",
          "mandatory": true,
          "standardReference": "3GPP TS 36.101",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        },
        "SCAN-DURATION": {
          "type": "INTEGER",
          "value": 5000,
          "description": "Duration of RSSI scan in milliseconds",
          "mandatory": true,
          "standardReference": "3GPP TS 36.101",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        }
      },
      "assertions": {
        "rssi_threshold": "rssi > -100",
        "scan_completion": "scan_progress == 100",
        "cell_detection": "cells_detected > 0"
      },
      "duration": 5000
    },
    {
      "step": 2,
      "eventType": "PSS_DETECTION",
      "layer": "PHY",
      "description": "PSS Detection and Sync",
      "subSteps": [
        "Detect Primary Synchronization Signal",
        "Calculate PSS correlation",
        "Achieve timing synchronization",
        "Extract PSS index"
      ],
      "expectedIEs": {
        "PSS-INDEX": {
          "type": "INTEGER",
          "value": 0,
          "description": "Primary Synchronization Signal Index (0-2)",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 2,
          "criticality": "REJECT",
          "bitPosition": 0,
          "fieldLength": 2
        },
        "PSS-CORRELATION": {
          "type": "REAL",
          "value": 0.95,
          "description": "PSS correlation peak value",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        },
        "PSS-TIMING": {
          "type": "INTEGER",
          "value": 1234,
          "description": "PSS timing offset in samples",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        }
      },
      "assertions": {
        "pss_detection": "pss_correlation > 0.8",
        "timing_sync": "timing_offset > 0",
        "pss_index_valid": "pss_index >= 0 && pss_index <= 2"
      },
      "duration": 2000
    },
    {
      "step": 3,
      "eventType": "SSS_DETECTION",
      "layer": "PHY",
      "description": "SSS Detection and PCI Calculation",
      "subSteps": [
        "Detect Secondary Synchronization Signal",
        "Calculate SSS correlation",
        "Calculate Physical Cell ID",
        "Validate PCI range"
      ],
      "expectedIEs": {
        "SSS-INDEX": {
          "type": "INTEGER",
          "value": 0,
          "description": "Secondary Synchronization Signal Index (0-167)",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 8,
          "criticality": "REJECT"
        },
        "PCI": {
          "type": "INTEGER",
          "value": 123,
          "description": "Physical Cell Identifier (0-503)",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 9,
          "criticality": "REJECT"
        },
        "SSS-CORRELATION": {
          "type": "REAL",
          "value": 0.92,
          "description": "SSS correlation peak value",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        }
      },
      "assertions": {
        "sss_detection": "sss_correlation > 0.8",
        "pci_calculation": "pci >= 0 && pci <= 503",
        "pci_valid": "pci == (3 * sss_index + pss_index)"
      },
      "duration": 1500
    },
    {
      "step": 4,
      "eventType": "DMRS_DETECTION",
      "layer": "PHY",
      "description": "DMRS Detection",
      "subSteps": [
        "Detect Demodulation Reference Signal",
        "Measure DMRS power",
        "Calculate DMRS SNR",
        "Perform channel estimation"
      ],
      "expectedIEs": {
        "DMRS-SEQUENCE": {
          "type": "BIT_STRING",
          "value": "1101010101010101",
          "description": "DMRS sequence bits",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        },
        "DMRS-POWER": {
          "type": "REAL",
          "value": -85.5,
          "description": "DMRS received power in dBm",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        },
        "DMRS-SNR": {
          "type": "REAL",
          "value": 15.2,
          "description": "DMRS Signal to Noise Ratio in dB",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 16,
          "criticality": "REJECT"
        }
      },
      "assertions": {
        "dmrs_detection": "dmrs_snr > 10",
        "channel_estimation": "dmrs_power > -90",
        "snr_threshold": "dmrs_snr > 5"
      },
      "duration": 1000
    },
    {
      "step": 5,
      "eventType": "PBCH_MIB_DECODE",
      "layer": "PHY",
      "description": "PBCH-MIB Decode",
      "subSteps": [
        "Decode Physical Broadcast Channel",
        "Extract Master Information Block",
        "Parse DL bandwidth configuration",
        "Extract PHICH configuration",
        "Get System Frame Number"
      ],
      "expectedIEs": {
        "DL-BANDWIDTH": {
          "type": "ENUMERATED",
          "value": "n100",
          "description": "Downlink bandwidth configuration (n6, n15, n25, n50, n75, n100)",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 3,
          "criticality": "REJECT"
        },
        "PHICH-CONFIG": {
          "type": "SEQUENCE",
          "value": { "duration": "NORMAL", "resource": "ONE_SIXTH" },
          "description": "PHICH configuration parameters",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 8,
          "criticality": "REJECT"
        },
        "SYSTEM-FRAME-NUMBER": {
          "type": "INTEGER",
          "value": 1234,
          "description": "System Frame Number (0-1023)",
          "mandatory": true,
          "standardReference": "3GPP TS 36.211",
          "encoding": "BER",
          "size": 10,
          "criticality": "REJECT"
        }
      },
      "assertions": {
        "mib_decode_success": "mib_decode_success == 1",
        "bandwidth_valid": "dl_bandwidth > 0",
        "sfn_valid": "sfn >= 0 && sfn <= 1023"
      },
      "duration": 2000
    }
  ],
  "assertions": {
    "cell_search_success": "pci > 0 && pss_correlation > 0.8 && sss_correlation > 0.8",
    "timing_sync_success": "timing_offset > 0",
    "mib_decode_success": "mib_decode_success == 1",
    "rssi_threshold": "rssi > -100",
    "snr_threshold": "dmrs_snr > 10"
  },
